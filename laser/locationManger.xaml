<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"           
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:syncfusion="clr-namespace:Syncfusion.SfRotator.XForms;assembly=Syncfusion.SfRotator.XForms"
 x:Class="laser.locationManger">
    <ContentPage.Content>
        <StackLayout Padding="0,31,0,56">
           <Label Text="favorite PLaces" TextColor="Teal" FontAttributes="Bold" HorizontalOptions="Center"></Label>
             <syncfusion:SfRotator    x:Name="rotator" />
                    <Button Clicked="Handle_Clicked" TextColor="White" Text="remove from favorites" BackgroundColor="Teal"> </Button>
                    <Button  Clicked="Handle_Clicked_1" TextColor="White" Text="add current place to favorites" BackgroundColor="Teal"> </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
